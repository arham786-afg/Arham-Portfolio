<script>
/* ===============================
   NAME TYPE EFFECT
================================ */

const nameText = "MOHAMMED BILAAL ARHAM";
const nameEl = document.getElementById("name");
let ni = 0;

function typeName(){
  if(ni < nameText.length){
    nameEl.textContent += nameText[ni++];
    setTimeout(typeName, 70);
  }
}
typeName();

/* ===============================
   TERMINAL ENGINE
================================ */

const terminal = document.getElementById("terminal");

function printLine(text){
  const line = document.createElement("div");
  line.textContent = text;
  terminal.appendChild(line);
  terminal.scrollTop = terminal.scrollHeight;
}

function skillLog(skill){
  printLine("[CONTEXT] " + skill);

  if(skill === "Detection & Response"){
    printLine("High severity alert triaged.");
    printLine("Credential dumping pattern observed.");
    printLine("Escalation threshold crossed.");
  }

  if(skill === "SOAR & Automation"){
    printLine("Playbook execution triggered.");
    printLine("Host isolation automated.");
    printLine("MTTR reduced.");
  }

  if(skill === "Detection Engineering"){
    printLine("Rule tuning in progress.");
    printLine("False positive rate reduced.");
  }

  if(skill === "Threat Hunting"){
    printLine("Behavioral anomaly detected.");
    printLine("Hunt converted to detection.");
  }
}

document.querySelectorAll(".skill").forEach(s=>{
  s.addEventListener("click",()=>{
    skillLog(s.dataset.skill);
    particlePulse();
  });
});

/* ===============================
   PARTICLE SYSTEM
================================ */

const canvas = document.getElementById("bg");
const ctx = canvas.getContext("2d");

canvas.width = window.innerWidth;
canvas.height = window.innerHeight;

window.addEventListener("resize",()=>{
  canvas.width = window.innerWidth;
  canvas.height = window.innerHeight;
});

let particles = [];
let pulse = 0;
let forming = true;

for(let i=0;i<700;i++){
  particles.push({
    x:Math.random()*canvas.width,
    y:Math.random()*canvas.height,
    vx:(Math.random()-0.5),
    vy:(Math.random()-0.5),
    tx:canvas.width/2,
    ty:canvas.height/3
  });
}

function particlePulse(){
  pulse = 6;
}

window.addEventListener("scroll",()=>{
  forming = false;
});

function drawTextShape(){
  ctx.font = "bold 80px monospace";
  ctx.textAlign = "center";
  ctx.fillText("MBA", canvas.width/2, canvas.height/3);
  const data = ctx.getImageData(0,0,canvas.width,canvas.height);
  ctx.clearRect(0,0,canvas.width,canvas.height);

  let index = 0;
  for(let y=0;y<canvas.height;y+=6){
    for(let x=0;x<canvas.width;x+=6){
      const alpha = data.data[(y*canvas.width + x)*4 + 3];
      if(alpha > 128 && particles[index]){
        particles[index].tx = x;
        particles[index].ty = y;
        index++;
      }
    }
  }
}

drawTextShape();

function animate(){
  ctx.clearRect(0,0,canvas.width,canvas.height);

  particles.forEach(p=>{
    if(forming){
      p.x += (p.tx - p.x)*0.05;
      p.y += (p.ty - p.y)*0.05;
    } else {
      p.x += p.vx;
      p.y += p.vy;
    }

    if(pulse > 0){
      p.x += (Math.random()-0.5)*pulse;
      p.y += (Math.random()-0.5)*pulse;
    }

    ctx.beginPath();
    ctx.arc(p.x,p.y,1.5,0,Math.PI*2);
    ctx.fillStyle="rgba(34,211,238,0.8)";
    ctx.fill();
  });

  if(pulse>0) pulse-=0.1;

  requestAnimationFrame(animate);
}
animate();
</script>

